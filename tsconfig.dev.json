{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "module": "ESNext"
  },
  "include": ["src/**/*", "dist/**/*"],
  "exclude": ["node_modules"]
}
